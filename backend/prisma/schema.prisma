generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Photo {
  id          Int        @id @default(autoincrement())
  title       String
  slug        String?    @unique
  description String?
  img         String?
  visible     Boolean
  categories  Category[]
  users       User?      @relation(fields: [userId], references: [id])
  userId      Int?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  photos    Photo[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  photos    Photo[]
  createdAt DateTime @default(now())
  undatedAt DateTime @updatedAt
}

model Message {
  id        Int      @id @default(autoincrement())
  email     String
  content   String
  createdAt DateTime @default(now())
  undatedAt DateTime @updatedAt
}
